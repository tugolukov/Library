@model System.Collections.Generic.List<Library.Domain.Models.Technology.TechnologyModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <h2 align="center">Категории применения</h2>
    <div class="row" style="padding-bottom: 20px">
        <div class="col-sm-5">
            <input type="search" class="form-control" placeholder="Поиск" aria-controls="technologiesTable">
        </div>
        <div class="col-sm-4"></div>
        <div class="col-sm-3">
            <button class="btn btn-light-green btn-block" type="button" data-toggle="modal" data-target="#Create">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                Добавить
            </button>
        </div>

    </div>


    <div class="table-responsive">
        <table id="technologiesTable" class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th scope="col-4">
                    Название
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
                <th scope="col-6">
                    Описание 
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
                <th scope="col-2">
                    Действия
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var technologyModel in Model)
            {
                <tr>
                    <td>@technologyModel.Name</td>
                    <td>@technologyModel.Description</td>
                    <td>
                        <a class="btn btn-blue-grey btn-sm btn-block" role="button" asp-area="" asp-controller="Technologies">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                            Информация
                        </a>
                        <a class="btn btn-blue-grey btn-sm btn-block" role="button" asp-area="" asp-controller="Technologies">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                            Редактировать
                        </a>

                        <button class="btn btn-blue-grey btn-sm btn-block" type="button" data-toggle="modal" data-target="#Delete">
                            <i class="fa fa-remove" aria-hidden="true"></i>
                            Удалить
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>

<!--Modal: Delete-->
<div class="modal fade right" id="Delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog modal-side modal-bottom-right modal-notify modal-danger" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <p class="heading">Подтверждение удаления</p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">&times;</span>
                </button>
            </div>

            <!--Body-->
            <div class="modal-body">
                <p class="lead">
                    Удалить запись?
                </p>
                <button type="button" class="btn btn-blue-grey" data-dismiss="modal" aria-label="Close">
                    Отмена
                </button>
                <button class="btn btn-danger" asp-controller="Technologies">
                    <!--TODO: добавить вызов контроллера-->
                    Удалить
                </button>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!--Modal: Delete-->

<div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Добавление автора</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <i class="fa fa-user prefix grey-text"></i>
                    <input type="text" id="form34" class="form-control validate">
                    <label data-error="wrong" data-success="right" for="form34">ФИО</label>
                </div>

                <div class="md-form">
                    <i class="fa fa-pencil prefix grey-text"></i>
                    <textarea type="text" id="form8" class="md-textarea form-control" rows="4"></textarea>
                    <label data-error="wrong" data-success="right" for="form8">Информация об авторе</label>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button type="button" class="btn btn-warning" data-dismiss="modal" aria-label="Close">Отменить</button>
                <button class="btn btn-info">Сохранить</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('#technologiesTable').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>